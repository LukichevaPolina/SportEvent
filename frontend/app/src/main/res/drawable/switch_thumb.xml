<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="18dp"
                        android:width="18dp"/>
                    <padding
                        android:top="3dp"
                        android:bottom="3dp"
                        android:right="3dp"
                        android:left="3dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/Base_0"/>
                    <size android:height="12dp"
                        android:width="12dp"/>

                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="18dp"
                        android:width="18dp"/>
                    <padding
                        android:top="3dp"
                        android:bottom="3dp"
                        android:right="3dp"
                        android:left="3dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/Orange_100"/>
                    <size android:height="12dp"
                        android:width="12dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>