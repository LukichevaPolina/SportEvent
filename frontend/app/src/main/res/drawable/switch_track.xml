<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/Base_300"/>
            <corners android:radius="32dp"/>
            <size android:height="18dp"
                android:width="36dp"/>
            <padding
                android:top="3dp"
                android:bottom="3dp"
                android:right="3dp"
                android:left="3dp"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/Orange_600"/>
            <corners android:radius="32dp"/>
            <size android:height="18dp"
                android:width="36dp"/>
            <padding
                android:top="3dp"
                android:bottom="3dp"
                android:right="3dp"
                android:left="3dp"/>
        </shape>
    </item>

</selector>