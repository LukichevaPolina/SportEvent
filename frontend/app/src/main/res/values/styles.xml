<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="splash">
        <item name="android:textSize">
            48sp
        </item>
        <item name="android:letterSpacing">
            0.03
        </item>
        <item name="android:textColor">
            @color/Orange_900
        </item>
        <item name="fontFamily">
            @font/ubuntu_bold
        </item>
    </style>

    <style name="Text_H1_24pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            24sp
        </item>
        <item name="fontFamily">
            @font/noto_sans_semi_bold
        </item>
    </style>

    <style name="Text_H2_20pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            20sp
        </item>
        <item name="fontFamily">
            @font/noto_sans_medium
        </item>
    </style>

    <style name="Text_Subtitle_18pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            18sp
        </item>
        <item name="fontFamily">
            @font/noto_sans_medium
        </item>
    </style>

    <style name="Text_Body_16pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            16sp
        </item>
        <item name="fontFamily">
            @font/noto_sans_regular
        </item>
    </style>

    <style name="Text_Body2_14pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            14sp
        </item>
        <item name="fontFamily">
            @font/noto_sans_light
        </item>
    </style>

    <style name="Text_Button_14pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            14sp
        </item>
        <item name="fontFamily">
            @font/noto_sans_medium
        </item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text_Secondary_12pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            12sp
        </item>
        <item name="fontFamily">
            @font/noto_sans_regular
        </item>
    </style>

    <style name="Text_Caption_10pt" parent="TextAppearance.AppCompat">
        <item name="android:textSize">
            10sp
        </item>
        <item name="fontFamily">
            @font/noto_sans_regular
        </item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/Base_0</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/AppleGreen_500</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.Chip" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="IconButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/Base_0</item>
        <item name="android:tint">@color/Base_500</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WhiteRoundButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/button_circle_white</item>
        <item name="android:tint">@color/AppleGreen_500</item>
        <item name="android:gravity">center</item>
    </style>


</resources>